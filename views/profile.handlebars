<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Profile - StatusMaker</title>
  <link rel="shortcut icon" href="/assets/img/favicon.png" />
  <link rel="stylesheet" type="text/css" href="/assets/style.css" />
</head>

<body>
  <nav>
    <a href="/login"><img id="logo" src="/assets/img/face.png" alt="face logo" /></a>
    <div class="navlink"><a href="/logout">Log out</a></div>
    <div class="navlink"><a href="/profile">Profile</a></div>
  </nav>

  <section id="app">
    <h1>Profile Page</h1>
    <p>Logged in as: <strong>{{username}}</strong></p>

    <form method="POST" action="/profile/username">
      <label for="username">New Username:</label>
      <input type="text" id="username" name="username" required />
      <button type="submit">Update Username</button>
    </form>

    <form method="POST" action="/profile/password">
      <label for="currentPassword">Current Password:</label>
      <input type="password" id="currentPassword" name="currentPassword" required />
      <label for="newPassword">New Password:</label>
      <input type="password" id="newPassword" name="newPassword" required />
      <button type="submit">Update Password</button>
    </form>
  </section>

</body>
</html>
